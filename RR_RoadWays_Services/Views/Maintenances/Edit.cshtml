@model RR_RoadWays_Services.Models.Maintenance;
@{
    ViewData["Title"] = "Edit Maintenance";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Edit Maintenance</h4>
    <hr />
    <div class="row">
        <div class="col-12 col-md-5">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text width-100" id="inputGroup-sizing-sm">Vehicle</span>
                </div>
                @Html.DropDownListFor(model => model.VehicleId, (IEnumerable<SelectListItem>)ViewBag.vehicleId, "--- Select Vehicle ---", new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="col-12 col-md-1">
            <div class="input-group input-group-sm mb-3">
                <a id="AddNewVehicle" class="btn btn-dark" style="color: #ffc107">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text width-100" id="inputGroup-sizing-sm">Maintenance Date</span>
                </div>
                @Html.EditorFor(model => model.MaintenanceDate, new
               {
                   htmlAttributes =
                           new { @class = "form-control", required = "required" }
               })
            </div>
        </div>

        <div class="col-12 col-md-5">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text width-100" id="inputGroup-sizing-sm">Maintenance Shop</span>
                </div>
                @Html.DropDownListFor(model => model.StationId, (IEnumerable<SelectListItem>)ViewBag.stationId, "--- Select Shop ---", new { @class = "form-control", required = "required" })

            </div>
        </div>
        <div class="col-12 col-md-1">
            <div class="input-group input-group-sm mb-3">
                <a id="AddNewMaintenanceShop" class="btn btn-dark" style="color: #ffc107">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="col-12 col-md-5">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text width-100" id="inputGroup-sizing-sm">Department</span>
                </div>
                @Html.DropDownListFor(model => model.DepartmentId, (IEnumerable<SelectListItem>)ViewBag.departId, "--- Select Department ---", new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="col-12 col-md-1">
            <div class="input-group input-group-sm mb-3">
                <a id="AddNewDepartment" class="btn btn-dark" style="color: #ffc107">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text width-100" id="inputGroup-sizing-sm">Description</span>
                </div>
                @Html.EditorFor(model => model.Description, new
                {
                    htmlAttributes =
                    new { @class = "form-control" }
                })
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text width-100" id="inputGroup-sizing-sm">Maintenance</span>
                </div>
                @Html.EditorFor(model => model.MaintenanceDesc, new
           {
               htmlAttributes =
                       new { @class = "form-control" }
           })

            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text width-100" id="inputGroup-sizing-sm">Amount</span>
                </div>
                @Html.EditorFor(model => model.Amount, new
                {
                    htmlAttributes =
                    new { @class = "form-control", required = "required" }
                })
            </div>
        </div>

    </div>

    <div class="row">

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-dark" />
            </div>
        </div>
    </div>
    <div class="modal fade" id="NewVehicle">
        <div class="modal-dialog modal-lg" style=" width :900px !important;">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    @*<h4>Add New City</h4>*@
                </div>

                <form id="NewVehicleForm">
                    <div class="modal-body">
                        <div class="form-horizontal">

                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Vehicle Number</span>
                                        </div>
                                        <input type="text" id="modalVehicleNumber" name="modalVehicleNumber" placeholder="Vehicle Number" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Owner Name</span>
                                        </div>
                                        <input type="text" id="modalOwnerName" name="modalOwnerName" placeholder="Owner Name" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Owner Contact Number</span>
                                        </div>
                                        <input type="text" id="modalOwnerContactNumber" name="modalOwnerContactNumber" placeholder="Owner Contact Number" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button id="saveNewVehicle" type="submit" class="btn btn-dark">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="newDepartmentModal">
        <div class="modal-dialog modal-lg" style=" width :900px !important;">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    @*<h4>Add New City</h4>*@
                </div>

                <form id="NewDepartmentForm">
                    <div class="modal-body">
                        <div class="form-horizontal">

                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Department Name</span>
                                        </div>
                                        <input type="text" id="modalDepartmentName" name="modalDepartmentName" placeholder="Department Name" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button id="btnsaveDepartment" type="submit" class="btn btn-dark">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="NewMaintenanceShop">
        <div class="modal-dialog modal-lg" style=" width :900px !important;">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    @*<h4>Add New City</h4>*@
                </div>

                <form id="NewMaintenanceShopForm">
                    <div class="modal-body">
                        <div class="form-horizontal">

                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Name</span>
                                        </div>
                                        <input type="text" id="modalMaintenanceShopName" name="modalMaintenanceShopName" placeholder="Name" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Location</span>
                                        </div>
                                        <input type="text" id="modalMaintenanceShopLocation" name="modalMaintenanceShopLocation" placeholder="Location" class="form-control" />
                                    </div>
                                </div>


                            </div>
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Owner Name</span>
                                        </div>
                                        <input type="text" id="modalMaintenanceShopOwnerName" name="modalMaintenanceShopOwnerName" placeholder="Owner Name" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Contact Number</span>
                                        </div>
                                        <input type="text" id="modalMaintenanceShopContactNumber" name="modalMaintenanceShopContactNumber" placeholder="Contact Number" class="form-control" />
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Station Type</span>
                                        </div>
                                        @Html.DropDownList("modalMaintenanceShopStationType", (IEnumerable<SelectListItem>)ViewBag.StationType, "--- Select Station Type ---", new { @class = "form-control", required = "required" })
                                    </div>
                                </div>

                                <div class="col-12 col-md-6">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text width-100" id="inputGroup-sizing-sm">Cities</span>
                                        </div>
                                        @Html.DropDownList("modalMaintenanceShopCityId", (IEnumerable<SelectListItem>)ViewBag.cities, "--- Select City ---", new { @class = "form-control", required = "required" })
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button id="saveNewMaintenanceShop" type="submit" class="btn btn-dark">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section scripts{
        <script>

            $("#AddNewMaintenanceShop").click(function (e) {
                $("#NewMaintenanceShop").modal();
            });

            function saveNewMaintenanceShop(data) {
                return $.ajax({
                    type: 'POST',
                    url: "/Maintenances/SaveMaintenanceShop",
                    data: data,
                    success: function (result) {
                        if (result.Id) {
                            alert("Record Saved Successfully!")
                            $("#modalMaintenanceShopName").val('');
                            $("#modalMaintenanceShopLocation").val('');
                            $("#modalMaintenanceShopOwnerName").val('');
                            $("#modalMaintenanceShopContactNumber").val('');
                            var ddl = $('#StationId');
                            $(document.createElement('option'))
                                .attr('value', result.Id)
                                .text(result.Name)
                                .appendTo(ddl)
                        }
                    },
                    error: function () {
                        alert("Error!")
                    }
                });
            }
            //Collect Multiple Order List For Pass To Controller
            $("#saveNewMaintenanceShop").click(function (e) {
                e.preventDefault();

                var modalsaveNewMaintenanceShopName = $("#modalMaintenanceShopName").val();
                var modalsaveNewMaintenanceShopLocation = $("#modalMaintenanceShopLocation").val();
                var modalsaveNewMaintenanceShopOwnerName = $("#modalMaintenanceShopOwnerName").val();
                var modalsaveNewMaintenanceShopContactNumber = $("#modalMaintenanceShopContactNumber").val();
                var modalsaveNewMaintenanceShopStationType = $("#modalMaintenanceShopStationType").val();
                var modalsaveNewMaintenanceShopCityId = $("#modalMaintenanceShopCityId").val();

                var data = {
                    Name: modalsaveNewMaintenanceShopName,
                    Location: modalsaveNewMaintenanceShopLocation,
                    OwnerName: modalsaveNewMaintenanceShopOwnerName,
                    ContactNumber: modalsaveNewMaintenanceShopContactNumber,
                    StationType: modalsaveNewMaintenanceShopStationType,
                    CityId: modalsaveNewMaintenanceShopCityId
                };

                $.when(saveNewMaintenanceShop(data)).then(function (response) {
                    console.log(response);
                }).fail(function (err) {
                    console.log(err);
                });

            });

            $("#AddNewVehicle").click(function (e) {
                $("#NewVehicle").modal();
            });

            function saveNewVehicle(data) {
                return $.ajax({
                    type: 'POST',
                    url: "/Maintenance/SaveVehicle",
                    data: data,
                    success: function (result) {
                        if (result.Id) {
                            alert("Record Saved Successfully!")
                            $("#modalVehicleNumber").val('');
                            $("#modalOwnerName").val('');
                            $("#modalOwnerContactNumber").val('');
                            var ddl = $('#VehicleId');
                            $(document.createElement('option'))
                                .attr('value', result.Id)
                                .text(result.VehicleNumber)
                                .appendTo(ddl)
                        }
                    },
                    error: function () {
                        alert("Error!")
                    }
                });
            }
            //Collect Multiple Order List For Pass To Controller
            $("#saveNewVehicle").click(function (e) {
                e.preventDefault();

                var VehicleNumber = $("#modalVehicleNumber").val();
                var OwnerName = $("#modalOwnerName").val();
                var OwnerContactNumber = $("#modalOwnerContactNumber").val();

                var data = {
                    VehicleNumber: VehicleNumber,
                    OwnerName: OwnerName,
                    OwnerContactNumber: OwnerContactNumber
                };

                $.when(saveNewVehicle(data)).then(function (response) {
                    console.log(response);
                }).fail(function (err) {
                    console.log(err);
                });

            });


            $("#AddNewDepartment").click(function (e) {
                $("#newDepartmentModal").modal();
            });
            function saveDepartment(data) {
                return $.ajax({
                    type: 'POST',
                    url: "/Maintenances/SaveDepartment",
                    data: data,
                    success: function (result) {
                        if (result.Id) {
                            alert("Record Saved Successfully!")
                            $("#modalDepartmentName").val('');
                            var ddl = $('#DepartmentId');
                            $(document.createElement('option'))
                                .attr('value', result.Id)
                                .text(result.DepartmentName)
                                .appendTo(ddl)
                        }
                    },
                    error: function () {
                        alert("Error!")
                    }
                });
            }
            //Collect Multiple Order List For Pass To Controller
            $("#savDepartment").click(function (e) {
                e.preventDefault();

                var departmentName = $("#modalDepartmentName").val();

                var data = {
                    DepartmentName: departmentName
                };

                $.when(saveDepartment(data)).then(function (response) {
                    console.log(response);
                }).fail(function (err) {
                    console.log(err);
                });

            });
        </script>
    }

    @if (!String.IsNullOrEmpty(ViewBag.error))
    {
        <div class="mt-2">
            <div class="alert alert-danger" role="alert">
                @ViewBag.error
            </div>
        </div>
    }

    @if (!String.IsNullOrEmpty(ViewBag.result))
    {
        <div class="mt-2">
            <div class="alert alert-success" role="alert">
                @ViewBag.result
            </div>
        </div>
    }

</div>
}